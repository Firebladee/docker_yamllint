# vi:syntax=yaml
---
groups:
  - name: master
    jobs:
      - hadolint
      - rubocop
      - shellcheck
      # - rspec
      - build-test
      - testinfra
      - docker-build
      - major
      - minor
      - patch
<% if ENV['master'] != "master" %>
  - name: ((branch))
    jobs:
      - hadolint-dev
      - rubocop-dev
      - shellcheck-dev
      # - rspec-dev
      - build-test-dev
      - testinfra-dev
<% end %>
resources:
  - name: resource-git
    type: git
    icon: github
    source:
      uri: https://github.com/Firebladee/docker_yamllint.git
      branch: master
<% if ENV['master'] != "master" %>
  - name: resource-git-dev
    type: git
    icon: github
    source:
      uri: https://github.com/Firebladee/docker_yamllint.git
      branch: ((branch))
<% end %>
  - name: docker-temp
    type: docker-image
    icon: docker
    source:
      repository: ((nexus_ip)):((nexus_docker_port))/testing
      username: ((nexus_username))
      password: ((nexus_password))
      insecure_registries:
        - http://((nexus_ip)):((nexus_docker_port))

  - name: docker-build
    type: docker-image
    icon: docker
    source:
      repository: ((nexus_ip)):((nexus_docker_port))/fireblade/yamllint
      username: ((nexus_username))
      password: ((nexus_password))
      insecure_registries:
        - http://((nexus_ip)):((nexus_docker_port))

  - name: docker-hub
    type: docker-image
    icon: docker
    source:
      repository: fireblade/yamllint
      username: ((docker_hub_username))
      password: ((docker_hub_password))

  - name: docker-libvirt
    type: registry-image
    icon: docker
    source:
      repository: ((nexus_ip)):((nexus_docker_group_port))/fireblade/libvirt

  - name: version
    type: semver
    source:
      driver: git
      uri: git@github.com:Firebladee/docker_yamllint.git
      branch: version
      file: version
      initial_version: 0.0.1
      private_key: ((private_key))

jobs:
  - name: hadolint
    public: true
    plan:
      - get: resource-git
        trigger: true
      - get: docker-libvirt
        trigger: true
      - task: validate
        config:
          platform: linux
          image_resource:
            type: registry-image
            source:
              repository: ((nexus_ip)):((nexus_docker_group_port))/hadolint/hadolint
              tag: latest-debian
          inputs:
            - name: resource-git
          run:
            path: sh
            args:
              - -exc
              - |
                hadolint --config resource-git/.hadolint.yaml resource-git/Dockerfile

  - name: rubocop
    public: true
    plan:
      - get: resource-git
        trigger: true
      - get: docker-libvirt
        trigger: true
      - task: rubocop
        config:
          platform: linux
          image_resource:
            type: registry-image
            source:
              repository: ((nexus_ip)):((nexus_docker_group_port))/library/ruby
          inputs:
            - name: resource-git
          run:
            path: sh
            args:
              - -exc
              - |
                cd resource-git
                gem install rubocop
                rubocop

  - name: shellcheck
    public: true
    plan:
      - get: resource-git
        trigger: true
      - task: shellcheck
        config:
          platform: linux
          image_resource:
            type: docker-image
            source:
              repository: koalaman/shellcheck-alpine
          inputs:
            - name: resource-git
          run:
            path: sh
            args:
              - -exc
              - |
                shellcheck resource-git/*.sh

