  - name: build-test
    public: true
    plan:
      - get: resource-git
        passed:
          - hadolint
        trigger: true
      - put: docker-temp
        params:
          build: resource-git/

  - name: testinfra
    public: true
    plan:
      - get: resource-git
        passed:
          - build-test
          # - rspec
        trigger: true
      - task: hello
        config:
          platform: linux
          image_resource:
            type: docker-image
            source:
              repository: ((nexus_ip)):((nexus_docker_port))/testing
              insecure_registries:
                - http://((nexus_ip)):((nexus_docker_port))
              
          run:
            path: echo
            args: ["Testinfra"]

  - name: docker-build
    public: true
    plan:
      - get: resource-git
        passed:
          - testinfra
        trigger: true
      - get: version
        params:
          bump: patch
      - put: docker-build
        params:
          build: resource-git
          tag_file: version/version
          tag_as_latest: true
      - put: docker-hub
        params:
          build: resource-git
          tag_file: version/version
          tag_as_latest: true
      - put: version
        params:
          file: version/version
